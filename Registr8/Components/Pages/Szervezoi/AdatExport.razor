@page "/adatexport-szervezo"
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h1 class="cim">Registr8</h1>

<a href="/logout" class="logout-div"><i class="bi bi-box-arrow-right"></i></a>
<a href="/szervezoi-felulet" class="home-div"><i class="bi bi-house"></i></a>

<div class="header">
    <h2>AdatExport</h2>
</div>


<button class="btn btn-primary" @onclick="DownloadCsv">Exportálás CSV-be</button>

@code {
    private async Task DownloadCsv()
    {
        await Task.Run(() => DownloadFileAsync());
    }

    public async Task DownloadFileAsync()
    {
        await Browser.OpenAsync("https://duszapi.runasp.net/AdatExport/GetAllCsapatCSV", BrowserLaunchMode.SystemPreferred);
    }

}

